{{ 'icon-with-content.css' | asset_url | stylesheet_tag }}
<div class="icon-with-content icon-with-content-{{section.id}}">
    <div class="page-width">

        {%- if section.settings.sub_heading != blank or section.settings.heading != blank or section.settings.short_note != blank -%}   
        <div class="icon-with-content-header">
            {%- if section.settings.sub_heading != blank -%}
            <span class="sub-heading">{{ section.settings.sub_heading }}</span>
            {%- endif %}
            {%- if section.settings.heading != blank -%}
            <h2 class="heading">{{ section.settings.heading | newline_to_br }}</h2>
            {%- endif %}
            {%- if section.settings.short_note != blank -%}
            <div class="short-note">{{ section.settings.short_note }}</div>
            {%- endif %}
        </div>
        {%- endif -%}   

        {%- if section.blocks.size != 0 -%}
        <div class="icon-with-content-body">
            <div class="icon-with-content-list">
                {%- for block in section.blocks -%}  
                    {%- if block.settings.image != blank or block.settings.title != blank -%}
                    <div class="icon-with-content-item">
                        <div class="icon-wrap">
                            {%- if block.settings.image != blank -%}
                                <img src="{{ block.settings.image |  img_url: '100x100'}}" width="50" height="50">
                            {%- endif -%}
                        </div>
                        <div class="text-wrap">
                            {{block.settings.title}}
                        </div>
                    </div>
                    {%- endif -%}       
                {%- endfor -%}
            </div>
        </div>
        {%- endif -%}   

    </div>
</div>
<style>
.icon-with-content-{{section.id}}{
    padding-top:{{section.settings.padding_top_desktop}}px;
    padding-bottom:{{section.settings.padding_bottom_desktop}}px;
    background-color:{{section.settings.background_color}};
}  
.icon-with-content-{{section.id}} .sub-heading{
    font-size: {{section.settings.sub_heading_size_desktop}}px;
    color: {{section.settings.sub_heading_color}};
}
.icon-with-content-{{section.id}} .heading{
    font-size: {{section.settings.heading_size_desktop}}px;
    color: {{section.settings.heading_color}};
}
.icon-with-content-{{section.id}} .short-note,
.icon-with-content-{{section.id}} .short-note p a{
    font-size: {{section.settings.short_note_desktop}}px;
    color: {{section.settings.short_note_color}};
}
@media(max-width:749px){
    .icon-with-content-{{section.id}}{
        padding-top:{{section.settings.padding_top_mobile}}px;
        padding-bottom:{{section.settings.padding_bottom_mobile}}px;
    }  
    .icon-with-content-{{section.id}} .sub-heading{
        font-size: {{section.settings.sub_heading_size_mobile}}px;
    }
    .icon-with-content-{{section.id}} .heading{
        font-size: {{section.settings.heading_size_mobile}}px;
    }  
    .icon-with-content-{{section.id}} .short-note{
        font-size: {{section.settings.short_note_mobile}}px;
    } 
}  
</style>

